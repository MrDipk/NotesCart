<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".ui.fragment.Question_Paper">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="48dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_vector_questionp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:allowUndo="false"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="8dp"
                    android:text="Previous Year Question Papers will help you to practice well and manage their time well as well as accuracy for the exam."
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spinnersem"
                style="@style/spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/style_spinner_sem" />

            <Spinner
                android:id="@+id/spinnerbranch"
                style="@style/spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/style_spinner_branch" />

            <Spinner
                android:id="@+id/spinnercollege"
                style="@style/spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/style_spinner_college" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/style_loginbutton"
                android:fontFamily="@font/poppins_semibold"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="GET YOUR PAPER"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>